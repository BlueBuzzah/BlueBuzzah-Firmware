# EditorConfig - https://editorconfig.org

root = true

# Default settings for all files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

# C/C++ source and headers
[*.{c,cpp,h,hpp,ino}]
indent_style = space
indent_size = 4
max_line_length = 100

# PlatformIO configuration
[platformio.ini]
indent_style = space
indent_size = 4

# Markdown documentation
[*.md]
indent_size = 2
trim_trailing_whitespace = false

# YAML files
[*.{yml,yaml}]
indent_size = 2

# JSON files
[*.json]
indent_size = 2

# Shell scripts
[*.sh]
indent_size = 2

# Makefiles require tabs
[Makefile]
indent_style = tab
